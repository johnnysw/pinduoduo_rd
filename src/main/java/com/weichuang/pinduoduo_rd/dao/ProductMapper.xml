<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weichuang.pinduoduo.dao.ProductMapper">

    <!--   List<Product> getAllProductList();-->
    <select id="getAllProductList" resultType="com.weichuang.pinduoduo.entity.Product">
        select * from t_product
    </select>

    <!--      Product getProductByID(int pid);-->
    <select id="getProductByID" resultType="com.weichuang.pinduoduo.entity.Product" parameterType="Integer">
        select * from product WHERE pid = #{pid}
    </select>

    <!-- void saveProduct(Product product);-->
    <insert id="saveProduct" parameterType="com.weichuang.pinduoduo.entity.Product">
        insert into t_product values (null ,#{name}, #{price}, #{stock}, #{desc},#{category},#{status});
    </insert>

    <!--void updateProduct(Product product);-->
    <update id="updateProduct" parameterType="com.weichuang.pinduoduo.entity.Product">
        UPDATE t_product
        <set>
            <if test="null != name">
                name = #{name},
            </if>
            <if test="null != price">
                price = #{price}
            </if>
            <where>
                prod_id = #{prod_id}
            </where>
        </set>
    </update>

    <!-- void deleteProductById(int id);-->
    <delete id="deleteProductById" parameterType="java.lang.Integer">
        DELETE FROM t_product WHERE prod_id = #{prod_id}
    </delete>

</mapper>
